.container {
  display: flex;
  flex-direction: column;
}

.container .nav {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #fff;
}

.container .nav text {
  flex: 1;
  display: block;
}

.container .nav .cur {
  border-bottom: 2px solid #31c27c;
  color: #31c27c;
}

.container >.content {
  background: #f4f4f4;
}

.content .carousel image {
  width: 100%;
  height: 300rpx;
}

.content .recommend .list {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.content .title {
  margin: 30rpx 0;
  font-size: 32rpx;
  color: #000;
}

.content .bottom {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 150rpx;
}

.content .bottom image {
  width: 180rpx;
  height: 50rpx;
  margin: 20rpx auto 10rpx auto;
}

.content .bottom text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.5);
}

.content .bottom .foot {
  font-size: 24rpx;
}

.content .search .searchBar {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
}

.content .search .searchBar .cancel {
  width: 80rpx;
  margin: auto 0 auto 20rpx;
  text-align: center;
}

.content .search .searchBar .searchInput {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  flex: auto;
  background: #fff;
  position: relative;
  box-sizing: border-box;
}

.content .search .searchBar .searchInput icon {
  margin: 13rpx auto;
  float: left;
}

.content .search .searchBar .searchInput .clear {
  position: absolute;
  right: 0;
  top: 0;
  padding: 6rpx 14rpx 6rpx 20rpx;
  z-index: 1;
}

.content .search .searchResult {
  background: #fff;
  font-size: 28rpx;
}

.content .search .searchResult .result .over {
  text-align: center;
  padding: 60rpx 0;
  color: #a7a7a7;
}

.content .search .searchResult .hotSearch {
  padding: 30rpx;
  overflow: hidden;
}

.content .search .searchResult .hotSearch>text {
  font-weight: bold;
}

.content .search .searchResult .hotSearch .hotWords {
  margin-top: 40rpx;
}

.content .search .searchResult .hotSearch .hotWords>text {
  border: 1px solid rgba(0, 0, 0, 0.6);
  padding: 16rpx 20rpx;
  border-radius: 32rpx;
  margin-right: 30rpx;
  display: block;
  float: left;
  margin-bottom: 20rpx;
}

.content .search .searchResult .hotSearch .hotWords .mostHot {
  color: #fc4524;
  border-color: #fc4524;
}

.content .search .searchBar .searchInput input {
  padding: 0 20rpx;
  height: 100%;
  font-size: 28rpx;
}

.placeholder {
  color: #d1d1d1;
  font-size: 28rpx;
}
