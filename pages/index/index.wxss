@import "./hotTemplate/hotTemplate.wxss";
@import "./rankTemplate/rankTemplate.wxss";
@import "./searchTemplate/searchTemplate.wxss";
@import "./historyTemplate/historyTemplate.wxss";
@import "../loadingTemplate/loadingTemplate.wxss";
