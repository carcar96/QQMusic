@import "listTemplate/listTemplate.wxss";
@import "../loadingTemplate/loadingTemplate.wxss";

.container {
  width: 100%;
  color: #fff;
}

.container .cover {
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  min-height: 750rpx;
  position: relative;
  border-bottom:1px solid rgba(0, 0, 0, 0.15);
}

.container .cover .content {
  width: 100%;
  height: 50%;
  position: absolute;
  bottom: 0;
  background:linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.9) 65%,#000 100%);
}

.container .cover .content .txt {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.container .cover .content .left .top {
  font-size: 24px;
}

.container .cover .content .left .bottom {
  font-size: 14px;
  line-height: 50rpx;
}

.container .cover .content .left .top .week {
  margin-left: 30rpx;
}

.container .cover .content .right {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 2px solid;
  border-color: #fff;
}

.container .cover .content .right .play {
  width: 80rpx;
  height: 80rpx;
  margin: 5rpx auto;
  border-radius: 50%;
  background: transparent;
  position: relative;
}

.container .cover .content .right .play::before {
  content: "";
  position: absolute;
  top: 11px;
  left: 15px;
  height: 0;
  width: 0;
  line-height: 999em;
  overflow: hidden;
  border-color: transparent transparent transparent currentColor;
  border-width: 10px 16px;
  border-style: solid;
  border-radius: 2px;
}

.container .lists {
  display: flex;
  flex-direction: column;
}
