.container .lists .list {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  padding: 0 20rpx;
}

.container .lists .list .left {
  width: 120rpx;
  text-align: center;
  line-height: 120rpx;
}

.container .lists .list .right {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  padding: 10rpx;
  line-height: 50rpx;
  overflow: hidden;
}

.container .lists .list .right>text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .lists .list .right .songer {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}
